<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ryanm.pushnotify.MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/pagetitle"
        android:text="@string/sport_events"
        android:background="@color/gold"
        android:padding="10dp"
        android:textSize="25sp"
        android:gravity="center"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/state"
        app:itemTextColor="@drawable/state"
        app:menu="@menu/bottom_navigation_main" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/activity_main_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/pagetitle">
        <com.example.ryanm.pushnotify.CustomScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myscroll"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/sport_events">
                    <ProgressBar
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminate="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/locations"
                    android:visibility="gone">
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/dining"
                        android:onClick="OpenDining"
                        android:layout_marginTop="5dp">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/computer"
                        android:onClick="OpenComputer">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/fitness"
                        android:onClick="OpenFitness">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/library"
                        android:onClick="OpenLibrary">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/print"
                        android:onClick="OpenPrint">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/links"
                        android:onClick="OpenLinks">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/events"
                    android:visibility="gone">
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/concerts"
                        android:onClick="OpenEvents"
                        android:layout_marginTop="5dp">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/conference"
                        android:onClick="OpenEvents">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/display"
                        android:onClick="OpenEvents">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/fairmarketplace"
                        android:onClick="OpenEvents">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/fitnessclass"
                        android:onClick="OpenEvents">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/fundraiser"
                        android:onClick="OpenEvents">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/meeting"
                        android:onClick="OpenEvents">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/movie"
                        android:onClick="OpenEvents">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/performance"
                        android:onClick="OpenEvents">
                    </Button>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/tournament"
                        android:onClick="OpenEvents">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </com.example.ryanm.pushnotify.CustomScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
